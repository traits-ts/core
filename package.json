{
    "name":                              "@traits-ts/core",
    "publishConfig":                     { "access": "public" },
    "description":                       "Traits for TypeScript Classes",
    "keywords":                          [ "traits", "class", "mixin" ],
    "homepage":                          "https://traits-ts.org",
    "repository":                        { "url": "git+https://github.com/traits-ts/core.git", "type": "git" },
    "bugs":                              { "url": "http://github.com/traits-ts/core/issues" },
    "version":                           "1.1.2",
    "license":                           "MIT",
    "author": {
        "name":                          "Dr. Ralf S. Engelschall",
        "email":                         "rse@engelschall.com",
        "url":                           "http://engelschall.com"
    },
    "types":                             "./dst/traits.d.ts",
    "module":                            "./dst/traits.esm.js",
    "main":                              "./dst/traits.cjs.js",
    "browser":                           "./dst/traits.umd.js",
    "exports": {
        ".": {
            "import":                    { "types": "./dst/traits.d.ts", "default": "./dst/traits.esm.js" },
            "require":                   { "types": "./dst/traits.d.ts", "default": "./dst/traits.cjs.js" }
        }
    },
    "devDependencies": {
        "eslint":                        "9.26.0",
        "@eslint/js":                    "9.26.0",
        "eslint-plugin-n":               "17.17.0",
        "eslint-plugin-promise":         "7.2.1",
        "eslint-plugin-import":          "2.31.0",
        "eslint-plugin-mocha":           "11.0.0",
        "eslint-plugin-chai-expect":     "3.1.0",
        "neostandard":                   "0.12.1",
        "globals":                       "16.0.0",

        "vite":                          "6.3.5",
        "vite-plugin-singlefile":        "2.2.0",
        "vite-plugin-node-polyfills":    "0.23.0",
        "@wroud/vite-plugin-tsc":        "0.11.6",
        "typescript":                    "5.8.3",
        "tsx":                           "4.19.4",
        "jiti":                          "2.4.2",
        "mocha":                         "11.2.2",
        "chai":                          "5.2.0",
        "chai-as-promised":              "8.0.1",
        "sinon-chai":                    "4.0.0",
        "sinon":                         "20.0.0",

        "nps":                           "5.10.0",
        "nodemon":                       "3.1.10",
        "shx":                           "0.4.0",

        "@types/node":                   "22.15.12",
        "@types/chai":                   "5.2.2",
        "@types/mocha":                  "10.0.10",
        "@types/sinon":                  "17.0.4",
        "@types/sinon-chai":             "4.0.0",
        "@types/chai-as-promised":       "8.0.2"
    },
    "scripts": {
        "start":                         "nps -c etc/nps.yaml"
    }
}
